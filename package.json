{
	"name": "react-vite-ts-boilerplate",
	"description": "A boilerplate/starter project for quickly building web using React with Vite and Typescript",
	"version": "1.0.0",
	"private": true,
	"packageManager": "yarn@3.5.1",
	"keywords": [
		"typescript",
		"react",
		"vite",
		"eslint",
		"prettier",
		"husky",
		"lint-staged",
		"boilerplate"
	],
	"scripts": {
		"prepare": "husky install",
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint \"src/**/*.{ts,tsx}\" --fix --report-unused-disable-directives --max-warnings 0",
		"format": "prettier --write \"**/*.{ts,tsx,cjs,json,md}\"",
		"preview": "vite preview"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.1.1",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"@vitejs/plugin-react": "^4.0.0",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"typescript": "^5.0.4",
		"vite": "^4.3.5"
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": "eslint --fix --report-unused-disable-directives --max-warnings 0",
		"**/*.{ts,tsx,cjs,json,md}": "prettier --write"
	}
}
